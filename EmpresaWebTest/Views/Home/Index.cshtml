@{
    ViewData["Title"] = "Home Page";
}

@model EmpresaWebTest.Models.InfoEmpresa

<h1>Consultas Generales</h1>
<br />
<br />
<h3>Listado de Clientes</h3>
<br />
<button id="btnDlg_CrearCliente" class="btn btn-outline-primary" >Nuevo Cliente</button>
<br />
<br />
@await Html.PartialAsync("_TablaClientes", Model._Clientes)


<br />
<h3>Listado de Cuentas</h3>
<br />
<button id="btnDlg_CrearCuentas" class="btn btn-outline-primary">Nueva Cuenta</button>
<br />
<br />
@await Html.PartialAsync("_TablaCuentas", Model._Cuentas)


<br />
<h3>Listado de Movimientos</h3>
<br />
<button id="btnDlg_CrearMovimiento" class="btn btn-outline-primary" >Nuevo Movimiento</button>
<br />
<br />
@await Html.PartialAsync("_TablaMovimientos", Model._Movimientos)

<div id="dlgClientes" style="display:none;" >
@await Html.PartialAsync("_MantenimientoClientes")
</div>
<div id="dlgCuentas" style="display:none;" >
@await Html.PartialAsync("_MantenimientoCuentas")
</div>

<div id="dlgMovimientos" style="display:none;" >
@await Html.PartialAsync("_MantenimientoMovimientos")
</div>
